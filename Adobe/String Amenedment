class Solution{
    public String amendSentence(String s){
        //code here
        StringBuilder res = new StringBuilder();
        for(int i = 0 ; i<s.length(); i++){
            char c = s.charAt(i);
           
            if(i==0){
                res.append(c);
                continue;
            }
            if(Character.isUpperCase(c)){
                res.append(" ");
                res.append(c);
            }else{
                res.append(c);
            }
        }
        return res.toString().toLowerCase();
    }
}
