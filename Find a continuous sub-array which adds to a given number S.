
class Solution
{
    //Function to find a continuous sub-array which adds up to a given number.
    static ArrayList<Integer> subarraySum(int[] arr, int n, int s) 
    {
        // Your code here
        // this is variaton of sliding window
        int i = 0;
        int j = 0;
        int target = 0;
        ArrayList<Integer> res = new ArrayList<>();
        while(i<arr.length &&j <arr.length){
            target+=arr[j];
            while(i<arr.length && target>s){
                target-=arr[i];
                i++;
            }
            if(target==s){
                res.add(i+1);
                res.add(j+1);
                return res;
            }
            j++;
        }
         res.add(-1);
        return res;
    }
}
